        <form class="mx-lg-auto mb-5 w-auto" asp-action="Register" asp-controller="Account" method="post">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="FirstName">First Name</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" placeholder="First name" asp-for="FirstName">
                    <span asp-validation-for="FirstName" hidden class="small text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="LastName">Last Name</label>
                <div class="col-sm-12">
                    <input type="text" class="form-control" placeholder="Last name" asp-for="LastName">
                    <span asp-validation-for="LastName" hidden class="small text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="Email">Email</label>
                <div class="col-sm-12">
                    <input type="email" class="form-control" placeholder="Email" asp-for="Email">
                    <span asp-validation-for="Email" hidden class="small text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="Password">Password</label>
                <div class="col-sm-12">
                    <input type="password" class="form-control" placeholder="Password" asp-for="Password">
                    <span asp-validation-for="Password" hidden class="small text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label" asp-for="ConfirmPassword">Confirm Password</label>
                <div class="col-sm-12">
                    <input type="password" class="form-control" placeholder="Confirm Password" asp-for="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" hidden class="small text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
                </div>
            </div>
            <div class="text text-danger" asp-validation-summary="All"></div>

        </form>
    </div>
</div>
