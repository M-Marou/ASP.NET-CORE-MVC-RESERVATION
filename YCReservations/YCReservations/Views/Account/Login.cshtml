@model YCReservations.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"  hidden class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" hidden class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="custom-checkbox" asp-for="RememberMe" />
                    <label asp-for="RememberMe"></label>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
            </form>
        </section>
    </div>
</div>