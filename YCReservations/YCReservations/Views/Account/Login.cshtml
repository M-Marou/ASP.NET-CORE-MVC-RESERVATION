@model YCReservations.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="py-5">
    <div>
        <img src="~/Img/Login-img.png" class="rounded float-right" style="max-width:550px;" asp-append-version="true" />
    </div>
    <div class="row py-5">
        <div class="col-md-9">
            <section>
                <form class="mx-lg-auto w-100 m-auto" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="social-login">
                        <button class="btn btn-primary text-white w-100" type="submit" name="provider" value="Facebook"
                                title="Login usin your facebook account">
                            <span><i class=" fab fa-facebook-f"></i>  Sign in with Facebook</span>
                        </button>
                        <button class="btn btn-light bg-danger text-white w-100" type="submit" name="provider" value="Google"
                                title="Login usin your Google account">
                            <span><i class="fab fa-google-plus-g"></i> Sign in with Google+</span>
                        </button>
                    </div>
                </form>
                <p style="text-align:center; margin-bottom:0px">OR</p>
                <form method="post">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" hidden class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="custom-checkbox" asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                </form>
            </section>
        </div>
    </div>
</div>