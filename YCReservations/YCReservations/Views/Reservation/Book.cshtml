@model YCReservations.Models.Reservations

@{
    ViewBag.Title = "Reservation";
}

<h2>Make A Reservation</h2>
<hr />

<div class="col-md-4">
    <form class="x-lg-auto mb-5 w-auto" asp-controller="Reservation" asp-action="Book" method="post">
        <div class="col-sm-12" hidden>
            <label asp-for="UserId" class="control-label"></label>
            <input asp-for="UserId" class="form-control" asp-items="@ViewBag.UserId" value="@ViewBag.UserId" />
            <span asp-validation-for="UserId" hidden class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="Date"></label>
                <input id="DateId" type='datetime' class="form-control text-center" asp-for="Date" placeholder="DD MMM, YYYY" readonly="readonly" />
                <span asp-validation-for="Date" hidden class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-12">
                <label asp-for="ReservationTypeId" class="control-label"></label>
                <select asp-for="ReservationTypeId" class="form-control" asp-items="@ViewBag.ReservationTypeId"></select>
                <span asp-validation-for="ReservationTypeId" hidden class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Book</button>
        </div>
        <div class="text text-danger" asp-validation-summary="All"></div>
    </form>
</div>

@section DPdatepicker{
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script>
        $(function () {
            $('#DateId').daterangepicker(
                {
                    "singleDatePicker": true,
                    "startDate": moment(),
                    "endDate": moment().endOf('year'),
                    "opens": "center"
                });
        });
    </script>
}
