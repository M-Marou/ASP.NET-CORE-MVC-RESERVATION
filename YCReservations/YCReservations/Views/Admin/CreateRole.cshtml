
@model YCReservations.Models.ViewModels.AdminCreateRoleViewModel

@{
    ViewData["Title"] = "ADMIN || CREATE NEW ROLE";
}

<div class="text-primary py-3">
    <h1>Create New Role</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" hidden class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="ListRoles" class="btn btn-outline-dark">Cancel</a>
            </div>

            <div class="form-group">
                <div class="text text-danger" asp-validation-summary="All"></div>
            </div>
        </form>
    </div>
</div>